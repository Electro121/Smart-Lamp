        let clicked = false;
        const bnt = document.getElementById("btn");
        const btxt = document.getElementById("key");
        bnt.addEventListener('click', function(e){
                    if(clicked == false) {
                        clicked = true;
                        bnt.classList.replace("fa-regular", "fa-solid");
                        btxt.innerHTML = "ON"
                } else {
                    clicked = false;
                    bnt.classList.replace("fa-solid", "fa-regular");
                    btxt.innerHTML = "OFF"
                }
        });
    </script>
